                  <select class="select form-control" id="vehicle" name="vehicle">
                    <option value="Bike">
                      Bike
                    </option>
                    <option value="Car">
                      Car
                    </option>
                    <option value="Van">
                      Van
                    </option>
                    <option value="Bus">
                      Bus
                    </option>
                  </select>
                </div>
              </div>

              <!--                                     MODEL                                               -->
              <div class="form-group ">
                <div class="control-label col-sm-2 requiredField">
                  <%= f.label :model, 'Car Model' %>
                  <span class="asteriskField">*</span>
                </div>
                <div class="col-sm-8">
                  <%= f.text_field :model, class: "select form-control", placeholder: "Please enter Model" %>
                </div>
              </div>

              <!--                                     RENT                                                 -->

              <div class="form-group ">
                <div class="control-label col-sm-2 requiredField">
                  <%= f.label :rent, 'Please enter the rent:' %>
                  <span class="asteriskField">*</span>
                </div>
                <div class="col-sm-8">
