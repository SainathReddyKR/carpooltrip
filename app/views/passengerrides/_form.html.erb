<script type="text/javascript">

  $(document).ready(function(){
    $('#vehicle').on('change', function() {
      if ( this.value == 'Bike')
      {
        $("#appear_not_bike").hide();
      }
      else
      {
        $("#appear_not_bike").show();
      }
    });
  });

  $(document).ready(function(){
    $('#music').on('change', function() {
      if ( this.value == 'No')
      {
        $("#appear_music").hide();
      }
      else
      {
        $("#appear_music").show();
      }
    });
  });

</script>




